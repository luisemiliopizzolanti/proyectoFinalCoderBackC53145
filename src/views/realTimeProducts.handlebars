 <link rel="stylesheet" href="/views/css/style_realTime.css">
 <!-- Barra de navegación -->
  <div class="navbar">
    <a href="/register">Register</a>
    <a href="/login">Login</a>
    <a href="/cart">Carrito</a>
    <a href="/products">Productos</a>
    <a href="#" class="logo">Mi Tienda</a>
  </div>

  <!-- Contenedor del formulario -->
  <div class="container">
    <h1>Dar de Alta un Producto</h1>
    
    <form id="product-form">
      <input type="hidden" id="product-id" name="product-id"> <!-- Campo oculto para el ID del producto -->
      
      <label for="code">Codigo del producto:</label>
      <input type="text" id="code" name="code" placeholder="Ingrese el codigo" required>

      <label for="title">Título del producto:</label>
      <input type="text" id="title" name="title" placeholder="Ingrese el título" required>

      <label for="description">Descripción:</label>
      <textarea id="description" name="description" placeholder="Ingrese la descripción" rows="4" required></textarea>

      <label for="price">Precio:</label>
      <input type="number" id="price" name="price" placeholder="Ingrese el precio" required min="0" step="0.01">

      <label for="thumbnail">URL de la Imagen:</label>
      <input type="url" id="thumbnail" name="thumbnail" placeholder="Ingrese la URL de la imagen" required>

      <label for="stock">Stock:</label>
      <input type="number" id="stock" name="stock" placeholder="Ingrese la cantidad en stock" required min="0">

      <label for="available">Habilitado:</label>
      <select id="available" name="available" required>
        <option value=true>Si</option>
        <option value=false>No</option>
      </select>

      <label for="category">Categoría:</label>
      <select id="category" name="category" required>
        <option value="">Seleccione una categoría</option>
        <option value="Nintendo">Nintendo</option>
        <option value="Sony">Sony</option>
        <option value="Sega">Sega</option>
        <option value="Microsoft">Microsoft</option>
        <option value="Otros">Otros</option>
      </select>

      <button type="submit" class="btn-submit">Guardar Producto</button>
      <button id="btn-cancel-modify" class="btn-cancel-modify">Cancelar Edicion</button>
    </form>

    <!-- Lista de productos existentes -->
    <div class="product-list" id="product-list">
      <h2>Productos Existentes</h2>
      <!-- Aquí se agregan dinámicamente los productos existentes -->
    </div>

    <!-- Botones de paginación -->
    <div class="pagination">
      <button id="prev-page" disabled>Anterior</button>
      <button id="next-page" disabled>Siguiente</button>
    </div>
  </div>

<script src="/socket.io/socket.io.js" charset="utf-8"></script>
